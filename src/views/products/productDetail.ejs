<!DOCTYPE html>
<html lang="es">
  <head>
    <title>Detalle de producto</title>
    <%- include("../partials/head.ejs") %>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <header><%- include("../partials/header.ejs") %></header>

    <main>
      <section class="product">
        <section class="images-container">
          <article class="more-images">
            <div>
              <img src="<%= product.image %>" alt="<%= product.name %>" />
            </div>
            <div>
              <img src="<%= product.image %>" alt="<%= product.name %>" />
            </div>
            <div>
              <img src="<%= product.image %>" alt="<%= product.name %>" />
            </div>
            <div>
              <img src="<%= product.image %>" alt="<%= product.name %>" />
            </div>
          </article>

          <article class="main-image">
            <img src="<%= product.image %>" alt="<%= product.name %>" />
          </article>
        </section>

        <section class="description-container">
          <h3><%= product.name %></h3>
          <p class="description"><%= product.description %></p>
        </section>
      </section>

      <section class="buttons">
        <button class="btn-buy">Comprar</button>
        <button class="btn-addToCart">Agregar al carrito</button>
      </section>

      <h4>Productos similares</h4>

      <section class="similarProducts-container">
        <button type="button" class="arrowButton">
          <i class="fa-solid fa-angle-left"></i>
        </button>

        <article class="similarProducts">
          <% products.forEach(product => { %>
          <div class="productCard">
            <a href="/products/detail/<%= product.id %>"
              ><img src="<%= product.image %>" alt="<%= product.name %>"
            /></a>

            <button type="button" class="btn-Add">AGREGAR</button>
          </div>
          <% }) %>
        </article>

        <button type="button" class="arrowButton">
          <i class="fa-solid fa-angle-right"></i>
        </button>
      </section>
    </main>

    <footer><%- include("../partials/footer.ejs") %></footer>
  </body>
</html>
