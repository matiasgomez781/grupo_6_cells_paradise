<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Editar producto</title>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/registro.css" />
  </head>
  <body>
    <header><%- include('../partials/header.ejs') %></header>

    <main>
      <section class="register-section">
        <h2 class="login-section-title">Editar Producto</h2>

        <form action="/products/<%= product.id %>?_method=PUT" method="POST">
          <section class="first">
            <p class="email">
              <label for="name">Name</label>
              <input
                type="name"
                name="name"
                id="name"
                placeholder="Nombre del producto"
                required
                value="<%= product.name %>"
              />
            </p>
            <p class="clave">
              <label for="price">Precio</label>
              <input
                type="number"
                name="price"
                id="price"
                placeholder="Precio del producto"
                required
                value="<%= product.price %>"
              />
            </p>
            <p class="clave2">
              <label for="discount">Descuento</label>
              <input
                type="number"
                name="discount"
                id="discount"
                placeholder="Porcentaje de descuento"
                required
                value="<%= product.discount %>"
              />
            </p>
          </section>
          <section class="second">
            <p>
              <label>Categoria</label>
              <select class="trato" name="category" id="category">
                <option value="celular">Celular</option>
                <option value="accesorio">Accesorio</option>
              </select>
            </p>
            <p class="about">
              <label for="description">Descripci√≥n</label>
              <textarea
                name="description"
                id="description"
                style="height: 10vw; width: 100%"
                class="textarea"
              >
              <%= product.description %></textarea
              >
            </p>
          </section>
          <p class="button">
            <button type="submit">Guardar Cambios</button>
          </p>

          <p class="login-links">
            <br />
            <a href="/products/createProduct">Crear</a> un producto nuevo
          </p>
        </form>
      </section>
    </main>

    <footer><%- include('../partials/footer.ejs') %></footer>
  </body>
</html>
