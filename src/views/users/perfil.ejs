<!DOCTYPE html>
<html lang="es">
  <head>

    <% if (user) { %>
    <title>Perfil de <%= user.first_name + " " + user.last_name %></title>

    <% } %>

    <%- include("../partials/head.ejs") %>

    <link rel="stylesheet" href="/css/perfil.css" />
    
  </head>

  <body>
    <header><%- include("../partials/header.ejs") %></header>

    <main>

      <h1>Perfil de: <%= user.first_name + " " + user.last_name %></h1>

      <section class="perfil-section">

      <% if (user) { %>

      <div class="perfil">
        <section class="avatar">
          <img
            class="img"
            src="/images/users/<%= user.avatar%>"
            alt="<%= user.first_name%>"
          />
          <div class="editar-perfil">
          <a href="/users/edit/<%= user.id %>">Editar Perfil</a>
        </div>
        </section>
    
        <section class="datos">
          <h4>Datos principales y de contacto</h4>
          <ul class="lista">
            <li>Nombre: <%= user.first_name + " " + user.last_name %></li>
            <li>Email: <%= user.email %></li>
            <li>Tel√©fono: <%= user.phone %></li>
          </ul>
        </section>
      </div>

      <% } %>
    </section>
    </main>
    

    <footer><%- include("../partials/footer.ejs") %></footer>
  </body>
</html>
